<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GameLayout">
    <children>
        <Label fx:id="usernameLabel" alignment="CENTER" layoutY="21.0" textAlignment="CENTER" AnchorPane.leftAnchor="250.0" AnchorPane.rightAnchor="250.0">
            <font>
                <Font name="Arial" size="12.0" />
            </font>
        </Label>
      <HBox alignment="CENTER" layoutY="79.0" prefHeight="417.0" prefWidth="1000.0" spacing="50.0">
         <children>
              <!-- Game Board Pane -->
              <Pane prefHeight="417.0" prefWidth="468.0" styleClass="board-pane">
                  <children>
                      <!-- Game Board Grid -->
                      <GridPane fx:id="boardGrid" layoutX="24.0" layoutY="29.0" prefHeight="360.0" prefWidth="420.0" styleClass="board-grid">
                          <columnConstraints>
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                          </columnConstraints>
                          <rowConstraints>
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                          </rowConstraints>
                      </GridPane>
                  </children>
              </Pane>
      
                    <!-- Chat UI -->
              <VBox fx:id="chatBox" prefHeight="417.0" prefWidth="351.0" spacing="10" styleClass="chat-box">
                  <!-- Output Area -->
                  <TextArea fx:id="chatOutput" editable="false" prefHeight="320.0" prefWidth="341.0" promptText="Chat messages..." styleClass="chat-output" wrapText="true">
                  <font>
                     <Font name="Arial" size="18.0" />
                  </font>
               </TextArea>
      
                        <!-- Input Area- -->
                  <HBox alignment="CENTER" prefHeight="91.0" prefWidth="347.0" spacing="5">
                      <children>
                          <!-- Input Field -->
                          <TextField fx:id="chatInput" prefHeight="35.0" prefWidth="251.0" promptText="Type a message..." styleClass="chat-input" />
                          <!-- Send Button -->
                          <Button fx:id="sendButton" prefHeight="35.0" prefWidth="91.0" styleClass="send-button" text="Send" />
                      </children>
                  </HBox>
                  <padding>
                      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                  </padding>
              </VBox>
         </children>
      </HBox>

        <!-- Error message-->
        <Label fx:id="messageLabel" layoutX="71.0" layoutY="529.0" prefHeight="92.0" prefWidth="858.0" textFill="RED">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></Label>
        <VBox layoutX="460.0" layoutY="581.0" alignment="CENTER" spacing="15">
            <Button fx:id="rematchButton" text="Rematch" styleClass="button-style" onAction="#handleRematchButtonClick" visible="false" />
            <Button fx:id="backButton"  mnemonicParsing="false" onAction="#handleBackButtonClick" styleClass="button-style" text="Back" />

        </VBox>
    </children>
</AnchorPane>
