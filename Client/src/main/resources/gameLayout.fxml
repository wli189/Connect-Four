<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" styleClass="background-color" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GameLayout">
    <children>
        <Label fx:id="usernameLabel" alignment="CENTER" layoutX="250.0" layoutY="31.0" textAlignment="CENTER" AnchorPane.leftAnchor="250.0" AnchorPane.rightAnchor="250.0">
            <font>
                <Font name="Arial" size="12.0" />
            </font>
        </Label>
      <HBox alignment="CENTER" layoutY="102.0" prefHeight="470.0" prefWidth="1000.0" spacing="50.0">
         <children>
              <!-- Game Board Pane -->
              <Pane prefHeight="500.0" prefWidth="520.0" styleClass="board-pane">
                  <children>
                      <!-- Game Board Grid -->
                      <GridPane fx:id="boardGrid" layoutX="20.0" layoutY="25.0" prefHeight="420.0" prefWidth="480.0" styleClass="board-grid">
                          <columnConstraints>
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                          </columnConstraints>
                          <rowConstraints>
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                          </rowConstraints>
                      </GridPane>
                  </children>
              </Pane>

                    <!-- Chat UI -->
              <VBox fx:id="chatBox" prefHeight="500.0" prefWidth="344.0" spacing="10" styleClass="chat-box">
                  <!-- Output Area -->
                  <TextArea fx:id="chatOutput" editable="false" prefHeight="407.0" prefWidth="330.0" promptText="Chat messages..." styleClass="chat-output" wrapText="true">
                  <font>
                     <Font name="Arial" size="18.0" />
                  </font>
               </TextArea>

                        <!-- Input Area- -->
                  <HBox alignment="CENTER" prefHeight="91.0" prefWidth="347.0" spacing="5">
                  <children>
                          <!-- Input Field -->
                          <TextField fx:id="chatInput" prefHeight="35.0" prefWidth="251.0" promptText="Type a message..." styleClass="chat-input" />
                          <!-- Send Button -->
                          <Button fx:id="sendButton" prefHeight="35.0" prefWidth="91.0" styleClass="send-button" text="Send" />
                  </children>
                  </HBox>
                  <padding>
                      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                  </padding>
              </VBox>
         </children>
      </HBox>
        <VBox alignment="CENTER" layoutX="460.0" layoutY="581.0" spacing="15">
            <Button fx:id="rematchButton" onAction="#handleRematchButtonClick" styleClass="button-style" text="Rematch" visible="false" />
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBackButtonClick" styleClass="button-style" text="Back" />

        </VBox>
        <Label fx:id="fullscreenMessage" alignment="CENTER" prefHeight="700.0" prefWidth="1000.0" styleClass="fullscreen-message" text="" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <font>
                <Font name="Arial Bold" size="24.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
